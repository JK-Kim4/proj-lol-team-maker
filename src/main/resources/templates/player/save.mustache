{{>layouts/header}}
<div class="starter-template">
    <div class="container-head-title">
        <h1>플레이어 등록</h1>
    </div>

    <div class="container">
        <div class="card">

            <div class="card-header">
                신규 플레이어 등록
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="inputTitle">제목</label>
                        <input type="text" class="form-control" id="inputTitle" placeholder="제목을 입력해 주세요">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="inputIsAvailable">사용 여부</label>
                        <small class="text-muted"><sup  style="color:red;">*</sup></small>
                        <fieldset>
                            <div class="form-group">
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="radio" name="inputIsAvailable" id="inputIsAvailableY" value="true" checked>
                                    <label class="form-check-label" for="inputIsAvailableY">Y</label>
                                </div>
                                <div class="form-check-inline">
                                    <input class="form-check-input" type="radio" name="inputIsAvailable" id="inputIsAvailableN" value="false">
                                    <label class="form-check-label" for="inputIsAvailableN">N</label>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <label for="inputDescription">본문</label>
                        <textarea class="form-control" id="inputDescription" cols="30" rows="10"></textarea>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary" id="playerInsertBtn"> 등록 </button>
                <button class="btn btn-dark" onclick="history.back();"> 취소 </button>
            </div>
        </div>
    </div>
</div>


<script src="/js/player.js"></script>
<script type="text/javascript">
    $(document).ready(function (){

    });
</script>

{{>layouts/footer}}